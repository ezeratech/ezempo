= form_for(@user) do |f|
  .form-group
    %div{:class => "fileinput fileinput-#{@user.avatar.present? ? 'exists' : 'new'}", "data-provides" => "fileinput"}
      .fileinput-new.thumbnail{:style => "width: 200px; height: 150px;"}
        %img{:alt => "", :src => "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image"}/
      .fileinput-preview.fileinput-exists.thumbnail{:style => "max-width: 200px; max-height: 150px;"}
        = image_tag(@user.avatar_url) if @user.avatar.present?
      %div
        %span.btn.default.btn-file
          %span.fileinput-new Select image
          %span.fileinput-exists Change
          = f.file_field :avatar
        = f.check_box :remove_avatar, class: 'icheck', data: { checkbox: 'icheckbox_flat-red' }
        = f.label :remove_avatar
    .clearfix.margin-top-10
      %span.label.label-danger NOTE!
      %span Attached image thumbnail is supported in Latest Firefox, Chrome, Opera, Safari and Internet Explorer 10 only
  .margin-top-10
    = f.submit 'Save Changes', class: 'btn green'
    = link_to 'Cancel', user_path(@user), class: 'btn default'