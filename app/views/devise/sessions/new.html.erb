 <!-- BEGIN LOGIN FORM -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" } ) do |f| %>
    <h3 class="form-title font-green">Sign In</h3>
    <div class="form-group">
        <%= f.label :email, class: "control-label visible-ie8 visible-ie9" %>
        <%= f.email_field :email, class: "form-control form-control-solid placeholder-no-fix", autocomplete: "off", placeholder: "Username", autofocus: true %>
    </div>
    <div class="form-group">
        <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
        <%= f.password_field :password, class: "form-control form-control-solid placeholder-no-fix", autocomplete: "off", placeholder: "Password", autofocus: true %>
    </div>
    <div class="form-actions">
      <%= f.submit 'Login', class: "btn green uppercase" %>
          <% if devise_mapping.rememberable? -%>
            <%= f.label :remember_me, class: "rememberme check" do %> 
            <%= f.check_box :remember_me %> Remember
            <% end %>
        <% end -%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'forget-password' %><br />
        <% end -%>
        <!-- <a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a> -->
    </div>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="create-account">
        <p>
            <%= link_to "Create an account", new_registration_path(resource_name), class: 'uppercase' %>
        </p>
    </div>
    <% end -%>
<% end %>
<!-- END LOGIN FORM -->
