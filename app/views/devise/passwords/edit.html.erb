<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "login-form" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  
  <h3 class="form-title font-green">Change your password</h3>
  <div class="field">
    <%= f.label :password, "New password", class: "control-label visible-ie8 visible-ie9" %><br />
   <!--  <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %> -->
    <%= f.password_field :password, class: "form-control form-control-solid placeholder-no-fix", autofocus: true, autocomplete: "off", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: "control-label visible-ie8 visible-ie9" %><br />
    <%= f.password_field :password_confirmation, class: "form-control form-control-solid placeholder-no-fix", autofocus: true, autocomplete: "off", placeholder: "Confirm New Password" %>
  </div>
<div class="form-actions">
        <%= link_to 'Back', new_user_session_path, class: 'btn btn-default' %>
        <!-- <button type="button" id="back-btn" class="btn btn-default">Back</button> -->
        <%= f.submit "Change my password", class: "btn btn-success uppercase pull-right" %>
    </div>

<!--   <div class="actions">
    <%= f.submit "Change my password" %>
  </div> -->
<% end %>

