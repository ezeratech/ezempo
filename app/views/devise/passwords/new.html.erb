<!-- BEGIN FORGOT PASSWORD FORM -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forget-form"} ) do |f| %>
  <%= devise_error_messages! %>
    <h3 class="font-green">Forget Password ?</h3>
    <p> Enter your e-mail address below to reset your password. </p>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", autocomplete: "off", placeholder: "Email" %>
    </div>
    <div class="form-actions">
        <%= link_to 'Back', new_user_session_path, class: 'btn btn-default' %>
        <!-- <button type="button" id="back-btn" class="btn btn-default">Back</button> -->
        <%= f.submit "Submit", class: "btn btn-success uppercase pull-right" %>
    </div>
<% end %>
<!-- END FORGOT PASSWORD FORM -->